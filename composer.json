{
    "description": "Micro service for travel central",
    "keywords": ["microframework", "rest", "router", "psr7"],
    "license": "MIT",
    "require": {
        "php": ">=7.1.1",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "doctrine/orm": "^2.5",
        "guzzlehttp/guzzle": "^6.3",
        "awurth/slim-validation": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }

}
